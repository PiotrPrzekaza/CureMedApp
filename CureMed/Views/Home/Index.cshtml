@model List<DoctorViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<form asp-controller="Home" asp-action="Index">
    <input type="text" name="ContentSearch"/>
    <button type="submit" class="btn btn-success">Search</button>
</form>


<a asp-controller="Home" asp-action="Add" class="btn btn-info" >Add Doctor</a>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    Id
                </th>
                <th scope="col">
                    Name
                </th>
                <th scope="col">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var doctor in Model)
            {
                <tr>
                    <th scope="row">@doctor.Id</th>
                    <td>@doctor.FirstName @doctor.LastName</td>
                    <td>
                        <a asp-area="" asp-controller="Home" asp-action="View" asp-route-doctorId="@doctor.Id">View</a> 
                        | 
                        <a asp-area="" asp-controller="Home" asp-action="Delete" asp-route-doctorId="@doctor.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
